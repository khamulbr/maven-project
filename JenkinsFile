pipeline {
	agent any

	parameters {
		string(name: 'tomcat_staging', defaultValue: 'ec2-52-90-200-21.compute-1.amazonaws.com', description: 'Staging Server')
		string(name: 'tomcat_prod', defaultValue: 'ec2-54-175-121-177.compute-1.amazonaws.com', description: 'Production Server')
	}

	triggers{
		pollSCM('* * * * *')
	}

	stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
 
        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "scp -i /home/alessandrodias/dev/java/tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_staging}:/var/lib/tomcat8/webapps"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        sh "scp -i /home/alessandrodias/dev/java/tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat8/webapps"
                    }
                }
            }
        }
    }	
}

