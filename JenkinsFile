pipeline {
	agent any

	parameters {
		sting(name: 'tomcat_staging', defaultValue: '52.90.200.21', description: 'Staging Server')
		sting(name: 'tomcat_prod', defaultValue: '54.175.121.177', description: 'Production Server')
	}

	triggers{
		pollSCM('* * * * *')
	}

	stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "scp -i /home/alessandrodias/dev/java/tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat8/webapps"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        sh "scp -i /home/alessandrodias/dev/java/tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat8/webapps"
                    }
                }
            }
        }
    }
}
	
}

